@library (c: http://aluminumproject.googlecode.com/core)
@library (xml: http://aluminumproject.googlecode.com/xml)

@xml.parse (c.variable name: 'document')
	<document>
	    <page number="1">This is the first page.</page>
	    <page number="2">This is the second page.</page>
	    <page number="3">This is the last page.</page>
	</document>

@xml.select (element: ${document}, expression: "page[@number = '3']/text()", c.variable name: 'text')