@library (c: http://aluminumproject.googlecode.com/core)
@library (xml: http://aluminumproject.googlecode.com/xml)
@library (xsl: http://aluminumproject.googlecode.com/xml)

@xml.document (c.variable name: document)
	@xml.page (number: 1)
	@xml.page (number: 2)
	@xml.page (number: 3)

@xsl.stylesheet (version: 2.0, xsl.namespace: http://www.w3.org/1999/XSL/Transform, c.variable name: styleSheet)
	@xsl.template (match: document/page)
		@xsl.value-of (select: @number)

@xml.transform (document: ${document}, style sheet: ${styleSheet})